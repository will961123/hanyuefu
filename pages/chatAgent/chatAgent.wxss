page {
  background-color: #f1f1f1;
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 90vw;
  /* width: 76vw; */
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

/* 聊天 */
.leftBox {
  display: flex;
  padding: 2vw 11vw 2vw 2vw;
}

.rightBox {
  display: flex;
  justify-content: flex-end;
  padding: 2vw 2vw 2vw 11vw;
}

.content {
  width: 11vw;
  height: 11vw;
}

.avatar {
  width: 11vw;
  height: 11vw;
  border-radius: 10rpx;
}

.leftArrow {
  width: 0;
  height: 0;
  border-top: 3vw solid transparent;
  border-bottom: 3vw solid transparent;
  border-left: 3vw solid transparent;
  border-right: 3vw solid rgb(255, 255, 255);
}

.rightArrow {
  width: 0;
  height: 0;
  border-top: 3vw solid transparent;
  border-bottom: 3vw solid transparent;
  border-right: 3vw solid transparent;
  border-left: 3vw solid #96EB6A;
}

