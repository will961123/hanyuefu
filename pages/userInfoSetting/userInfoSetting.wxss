/* box1 */
page{
  width: 100%;
  height: 100%;
  background: rgb(238, 236, 236);
}
.box1 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  flex-wrap: wrap;
  background: white;
 
  text-align: center;
  align-items: center;
  margin-top: 30rpx;
  padding: 0rpx 50rpx;
  height: 240rpx;
  /* background-image: url(https://img.zhichiwangluo.com/zcimgdir/album/file_5cb9947482d6a.jpg); */
  opacity: 1;
  background-size: 100% 100%;
  position: relative;
}

.box1 image {
  width: 180rpx;
  height: 180rpx;
   border: 1rpx solid #ccc;
   border-radius: 100rpx;

}

.box1 .img {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: white;
}


.box1 .right {
  position: absolute;
  right: 50rpx;
}

/* box2 */

.box2 {
  background-color: white;
  padding: 0rpx 50rpx;
  margin-top: 30rpx;
}

.box2 .li {
  display: flex;
  flex-direction:row;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f3f3f3;
  color: rgb(51, 51, 51);
}

.box2 .iconfont {
  font-size: 40rpx;
}
.box2 .left{
  font-size: 28rpx;
  width: 180rpx;
}
.box2 .mid {
  /* margin-left: 100rpx; */
  font-size: 28rpx;
  color: rgb(148, 147, 147);
  width: 450rpx;
}
.box2 .right {
  position: absolute;
  right: 50rpx;
}
.box2 .iconyoujiantou {
  font-size: 32rpx;
}
